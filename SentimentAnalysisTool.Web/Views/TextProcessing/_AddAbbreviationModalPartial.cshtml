@model SentimentAnalysisTool.Web.Models.UploadAbbreviationViewModel
<div class="modal fade" id="abbrev-record-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Abbreviation Record</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="upload-abbrev-txt"
                      data-ajax="true"
                      data-ajax-update="#abbrevs"
                      data-ajax-loading="spinner-upload"
                      data-ajax-success="displaySwalSuccessUpload('Successfully uploaded abbreviations');"
                      asp-action="UploadAbbreviationFile"
                      asp-controller="TextProcessing" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Upload excel file</label>
                        <div class="input-group">
                            <div class="custom-file">
                                @{
                                    Model.CorpusTypeId = ViewBag.CorpusTypeId;
                                }
                                <input type="hidden" asp-for="@Model.CorpusTypeId" />
                                <input type="file" class="custom-file-input" asp-for="@Model.File" id="abbrev-upload-file" required />
                                <label class="custom-file-label" for="abbrev-upload-file" >Choose file</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" form="upload-abbrev-txt" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>