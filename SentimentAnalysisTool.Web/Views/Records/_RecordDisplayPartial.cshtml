@using SentimentAnalysisTool.Web.Enums
@model SentimentAnalysisTool.Web.Models.RecordDisplayViewModel
<div class="col-6">
    <div class="card shadow-sm card-height d-flex">        
        <div class="card-header">
            Comments <br />
        </div>
        <div class="card-body align-items-center d-flex justify-content-center">
            @if (Model.Algorithmn == AlgorithmnType.Vader)
            {
                @await Html.PartialAsync("_CommentsPartialVader", Model.CommentVaderViewModels.ToList())
            }
            @if (Model.Algorithmn == AlgorithmnType.SentiWordNet)
            {
                @await Html.PartialAsync("_CommentsPartialSentiwordnet", Model.CommentSentiwordModels.ToList())
            }
            @if (Model.Algorithmn == AlgorithmnType.Hybrid)
            {
                @await Html.PartialAsync("_CommentsPartialHybrid", Model.CommentHybridViewModels.ToList());
            }
            @if (Model.Algorithmn == null)
            {
                <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_oga1x3jk.json" background="transparent" speed="1" style="width: 600px; height: 600px;" loop autoplay></lottie-player>
            }
        </div>
    </div>
</div>
<div class="col-6">
    <div class="row">
        <div class="col-6">
            <div class="card mb-2 shadow-sm card-chart-height d-flex">
                <div class="card-header">
                    Word Frequencies
                </div>
                <div class="card-body align-items-center d-flex justify-content-center">
                    @if (Model.WordFrequencyViewModels == null)
                    {
                        <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_oga1x3jk.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></lottie-player>
                    }
                    else
                    {
                        @await Html.PartialAsync("_WordFrequencyPartial", Model.WordFrequencyViewModels)
                    }
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card mb-2 shadow-sm card-chart-height d-flex">
                <div class="card-header">
                    Review Classification
                </div>
                <div class="card-body align-items-center d-flex justify-content-center">
                    @if (Model.ReviewClassification == null)
                    {
                        <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_oga1x3jk.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></lottie-player>
                    }
                    else
                    {
                        @await Html.PartialAsync("_ReviewClassificationPartial", Model.ReviewClassification)
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card mb-2 shadow-sm card-chart-height">
                <div class="card-header">
                    Sentiment over time
                </div>
                <div class="card-body">
                    This is some text within a card body.
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card mb-2 shadow-sm card-chart-height">
                <div class="card-header">
                    Keyword cloud
                </div>
                <div class="card-body">
                    <div id="keyword-container"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card mb-2 shadow-sm card-chart-height-2">
                <div class="card-body">
                    This is some text within a card body.
                </div>
            </div>
        </div>
    </div>
</div>
