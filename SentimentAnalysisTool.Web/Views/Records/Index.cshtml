@model SentimentAnalysisTool.Web.Models.CommentViewModels.UploadCsvCommentViewModel

<div class="row">
    <div class="col-12">
        <div class="card mb-2">
            <div class="card-body">
                <div class="row">
                    <form asp-controller="Records" asp-action="UploadCsvFile" method="post"
                          enctype="multipart/form-data">
                        <input type="file" name="file" />
                        <input type="radio" name="algorithmnType" value="@SentimentAnalysisTool.Web.Enums.AlgorithmnType.Hybrid" />
                        <label>@nameof(SentimentAnalysisTool.Web.Enums.AlgorithmnType.Hybrid)</label>
                        <input type="radio" name="algorithmnType" value="@SentimentAnalysisTool.Web.Enums.AlgorithmnType.SentiWordNet">
                        <label>@nameof(SentimentAnalysisTool.Web.Enums.AlgorithmnType.SentiWordNet)</label>
                        <input type="radio" name="algorithmnType" value="@SentimentAnalysisTool.Web.Enums.AlgorithmnType.Vader">
                        <label>@nameof(SentimentAnalysisTool.Web.Enums.AlgorithmnType.Vader)</label>
                        <button type="submit" class="btn btn-success">Upload File</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-6">
        @if (Model.Vader != null && Model.Hybrid == null && Model.SentiWordNet == null)
        {
            @await Html.PartialAsync("_CommentsPartialVader", Model.Vader)
        }
        @if (Model.SentiWordNet != null && Model.Hybrid == null && Model.Vader == null)
        {
            @await Html.PartialAsync("_CommentsPartialSentiwordnet", Model.SentiWordNet)
        }
        @if (Model.Hybrid != null && Model.SentiWordNet == null && Model.SentiWordNet == null)
        {
            @await Html.PartialAsync("_CommentsPartialHybrid", Model.Hybrid)
        }
    </div>
